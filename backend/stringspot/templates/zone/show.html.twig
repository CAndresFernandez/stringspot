{% extends 'base.html.twig' %}

{% block title %}
  Zone
{% endblock %}

{% block body %}
  {% block subBody %}
    <div class="container-fluid">
      <h1>Zone</h1>
      <table class="table">
        <tbody>
          <tr>
            <th>City</th>
            <td>{{ zone.city }}</td>
          </tr>
          <tr>
            <th>Postal Code</th>
            <td>{{ zone.postCode }}</td>
          </tr>
          <tr>
            <th>Country</th>
            <td>{{ zone.country.name }}</td>
          </tr>
          <tr>
            <th>Centers</th>
            {% if zone.centers %}
              <td class="p-0">
                <table class="table table-hover m-0">
                  <tbody>
                    <tr>
                      <th scope="col" style="width: 30%">Name</th>
                      <th scope="col" style="width: 30%">Address</th>
                      <th scope="col" style="width: 30%"># of Courts</th>
                      <th scope="col" style="width: 10%">Actions</th>
                    </tr>
                    {% for center in zone.centers %}
                      <tr>
                        <td class="border-bottom-0">{{ center.name|e }}</td>
                        <td class="border-bottom-0">{{ center.address|e }}</td>
                        <td class="border-bottom-0">{{ center.numberCourts|e }}</td>
                        <td>
                          <a href="{{ path('app_admin_center_show', { id: center.id }) }}"><button type="button" class="btn btn-info btn-sm bi bi-eye"></button></a>
                          <a href="{{ path('app_admin_center_edit', { id: center.id }) }}"><button type="button" class="btn btn-warning btn-sm bi bi-pencil-square"></button></a>
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </td>
            {% endif %}
          </tr>
        </tbody>
      </table>

      <a href="{{ path('app_admin_zone_edit', { id: zone.id }) }}"><button type="button" class="btn btn-sm btn-warning mx-1 mb-2">Edit</button></a>

      {{ include('zone/_delete_form.html.twig') }}

      <a href="{{ path('app_admin_country_show', { id: zone.country.id }) }}"><button type="button" class="btn btn-sm btn-primary mx-1 mb-2 bi bi-arrow-left-square">Back to Country</button></a>
    </div>
  {% endblock %}
{% endblock %}
