<form method="post" action="{{ path('app_admin_zone_delete', { id: zone.id }) }}" onsubmit="return confirm('Are you sure you want to delete this zone?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ zone.id) }}" />
  <button class="btn btn-danger btn-sm mx-1 mb-2 bi bi-trash"></button>
</form>
