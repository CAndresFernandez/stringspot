<form method="post" action="{{ path('app_admin_court_delete', { id: court.id }) }}" onsubmit="return confirm('Are you sure you want to delete this court?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ court.id) }}" />
  <button class="btn btn-danger btn-sm mx-1 mb-2 bi bi-trash">Delete</button>
</form>
