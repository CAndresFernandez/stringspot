{% extends 'base.html.twig' %}

{% block title %}
  Court
{% endblock %}

{% block body %}
  {% block subBody %}
    <div class="container-fluid">
      <h1>Court</h1>

      <table class="table">
        <tbody>
          <tr>
            <th>Number</th>
            <td>{{ court.number }}</td>
          </tr>
          <tr>
            <th>Center</th>
            <td>{{ court.center.name }}</td>
          </tr>
          <tr>
            <th>Type</th>
            <td>{{ court.type }}</td>
          </tr>
        </tbody>
      </table>

      <a href="{{ path('app_admin_court_edit', { id: court.id }) }}"><button type="button" class="btn btn-sm btn-warning mx-1 mb-2">Edit</button></a>

      {{ include('court/_delete_form.html.twig') }}

      <a href="{{ path('app_admin_court_list') }}"><button type="button" class="btn btn-sm btn-primary mx-1 mb-2 bi bi-arrow-left-square">Back to list</button></a>
    </div>
  {% endblock %}
{% endblock %}
