{% extends 'base_back.html.twig' %}

{% block title %}
  Technology
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <h1>Technology</h1>

    <table class="table">
      <tbody>
        <tr>
          <th>Name</th>
          <td>{{ tech.name }}</td>
        </tr>
        {% if tech.version %}
          <tr>
            <th>Version</th>
            <td>{{ tech.version }}</td>
          </tr>
        {% endif %}
      </tbody>
    </table>

    <a href="{{ path('app_back_tech_edit', { id: tech.id }) }}"><button type="button" class="btn btn-sm btn-warning mx-1 mb-2">Edit</button></a>

    {{ include('back/tech/_delete_form.html.twig') }}

    <a href="{{ path('app_back_tech_list') }}"><button type="button" class="btn btn-sm btn-primary mx-1 mb-2 bi bi-arrow-left-square">Back to list</button></a>
  </div>
{% endblock %}
